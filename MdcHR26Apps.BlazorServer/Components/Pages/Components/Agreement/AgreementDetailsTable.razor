@namespace MdcHR26Apps.BlazorServer.Components.Pages.Components.Agreement
@rendermode InteractiveServer

@if (agreement != null)
{
    <table class="table">
        <tbody>
            <tr>
                <th>평가지표</th>
                <td>@agreement.Report_Item_Name_1</td>
            </tr>
            <tr>
                <th>평가직무</th>
                <td>@agreement.Report_Item_Name_2</td>
            </tr>
            <tr>
                <th>직무비중</th>
                <td>@agreement.Report_Item_Proportion %</td>
            </tr>
            <tr>
                <th>항목번호</th>
                <td>@agreement.Report_Item_Number</td>
            </tr>
        </tbody>
    </table>

    <div class="mt-3">
        <button type="button" class="btn btn-primary" @onclick="@(() => OnEdit.InvokeAsync())">편집</button>
        <button type="button" class="btn btn-danger" @onclick="@(() => OnDelete.InvokeAsync())">삭제</button>
        <button type="button" class="btn btn-secondary" @onclick="@(() => OnBack.InvokeAsync())">목록</button>
    </div>
}
else
{
    <p><em>데이터를 불러오는 중...</em></p>
}
