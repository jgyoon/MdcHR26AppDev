@if (model == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="modal @ModalClass" tabindex="-1" role="dialog" style="display:@ModalDisplay; overflow-y: auto;">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">사용자 삭제</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="() => Close()">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p><strong>@model.UserName</strong> 사용자를 삭제하시겠습니까?</p>
                    <p class="text-muted">관련된 평가 데이터도 함께 삭제됩니다.</p>
                    @if (!string.IsNullOrEmpty(resultText))
                    {
                        <div class="alert @(resultText.Contains("Success") ? "alert-success" : "alert-danger")" role="alert">
                            @resultText
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" @onclick="DeleteUser">예(Yes)</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" @onclick="() => Close()">아니요(No)</button>
                </div>
            </div>
        </div>
    </div>

    @if (ShowBackdrop)
    {
        <div class="modal-backdrop fade show"></div>
    }
}
