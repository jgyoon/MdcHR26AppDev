@namespace MdcHR26Apps.BlazorServer.Components.Pages.Components.SubAgreement.CommonView
@rendermode InteractiveServer

@if (ReportTaskListDB == null || ReportTaskListDB.Count == 0)
{
    <p><em>등록된 업무가 없습니다.</em></p>
}
else
{
    <div class="row mb-3">
        <div class="col-12">
            <h5>
                세부업무 내역 (@ReportTaskListDB.Count 건)
                <span @onclick="() => Toggle.InvokeAsync()" class="@IconClass" style="cursor: pointer;"></span>
            </h5>
        </div>
    </div>

    @if (Collapsed)
    {
        <table class="table table-sm">
            <thead>
                <tr>
                    <th>번호</th>
                    <th>업무명</th>
                    <th>업무목표</th>
                    <th>목표비중</th>
                    @if (OnSelectTask.HasDelegate)
                    {
                        <th>선택</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var task in ReportTaskListDB)
                {
                    <tr>
                        <td>@task.TaksListNumber</td>
                        <td>@task.TaskName</td>
                        <td>@task.TaskObjective</td>
                        <td>@task.TargetProportion %</td>
                        @if (OnSelectTask.HasDelegate)
                        {
                            <td>
                                <button type="button" class="btn btn-sm btn-primary" @onclick="@(() => OnSelectTask.InvokeAsync(task.Tid))">선택</button>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    }
}
