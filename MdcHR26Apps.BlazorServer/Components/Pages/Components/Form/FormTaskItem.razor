@namespace MdcHR26Apps.BlazorServer.Components.Pages.Components.Form
@rendermode InteractiveServer

<div class="card col-12">
    <div class="card-header">
        <h5>업무명(업무난이도) : @task.TaskName (@taskutils.LeveltoName(task.TaskLevel))</h5>
    </div>
    <div class="card-body">
        <h5>업무목표 : </h5>
        @task.TaskObjective
    </div>
    <div class="card-footer">
        <label>목표일자 / 달성일자 : </label>
        <div>
            <div class="input-group mb-1">
                <span class="input-group-text mb-1 w-20">목표일자</span>
                <input type="date" class="form-control mb-1" style="width: 10em; margin: 0 auto;" @bind-value="@task.TargetDate" disabled></input>
            </div>
            <div class="input-group mb-1">
                <span class="input-group-text mb-1 w-20">달성일자</span>
                <input type="date" class="form-control mb-1" style="width: 10em; margin: 0 auto;" @bind-value="@task.ResultDate"></input>
            </div>
        </div>
        <hr />
        <label>업무진척도 : </label>
        <div>
            <div class="progress">
                <div class="progress-bar bg-info" role="progressbar" style="width: @task.TargetProportion%;" aria-valuenow=@task.TargetProportion aria-valuemin="0" aria-valuemax="100">@task.TargetProportion %</div>
            </div>
            <div class="progress">
                <div class="progress-bar bg-success" role="progressbar" style="width: @task.ResultProportion%;" aria-valuenow=@task.ResultProportion aria-valuemin="0" aria-valuemax="100">@task.ResultProportion %</div>
            </div>
            <div class="input-group mb-1">
                <InputNumber class="form-control mb-1" id="User_Evaluation_3" step="1" min="0" max="100" @bind-Value=@task.ResultProportion></InputNumber>
                <span class="input-group-text mb-1">%</span>
            </div>
        </div>
        <hr />
        <label>상태 : </label>
        <div>
            <InputSelect id="Deptment" class="form-select mb-1" @bind-Value="task.TaskStatus">
                <option value="0" selected>진행중</option>
                <option value="1" selected>종료</option>
                <option value="2" selected>보류</option>
                <option value="3" selected>취소</option>
            </InputSelect>
        </div>
    </div>
</div>
