@namespace MdcHR26Apps.BlazorServer.Components.Pages.Components.Report
@rendermode InteractiveServer

<table class="table table-hover table-responsive-md">
    <thead>
        <tr>
            <th class="table-header">#</th>
            <th class="table-header">순번</th>
            <th class="table-header">평가지표</th>
            <th class="table-header">평가직무</th>
            <th class="table-header">직무비중</th>
            <th class="table-header">세부직무</th>
            <th class="table-header">세부직무비중</th>
            <th class="table-header">비고</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in reports)
        {
            <tr>
                <td class="table-cell">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDisabled" checked disabled>
                </td>
                <td class="table-cell">@item.Report_Item_Number</td>
                <td class="table-cell">@item.Report_Item_Name_1</td>
                <td class="table-cell">@item.Report_Item_Name_2</td>
                <td class="table-cell">@item.Report_Item_Proportion %</td>
                <td class="table-cell">@item.Report_SubItem_Name</td>
                <td class="table-cell">@item.Report_SubItem_Proportion %</td>
                <td class="table-cell">
                    <button id="DetailButton" class="btn btn-info" @onclick="@(() => ReportEditAction(item.Rid))">상세</button>
                </td>
            </tr>
        }
    </tbody>
</table>
